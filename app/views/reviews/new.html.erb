<h1>New review for restaurant <%= @restaurant.name %></h1>
<h3>(app/views/reviews/new.html.erb) - restaurant.id =  <%= @restaurant.id %></h3>

<!-- .class.downcase.pluralize => @review -> reviews -->

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>

    <!-- <%= f.submit "Save" %> version basique Ã  moi -->
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', restaurants_path %>
</div>

